			<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
		<% else %>
			<%= link_to "Sign In / Sign Up", new_user_session_path %>
		<% end %>
	</div>
</div>

<div class="glob-con">

<%= yield %>

</div>

</body>
</html>
