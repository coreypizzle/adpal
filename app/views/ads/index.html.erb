<style type="text/css">
.ads_link {
  font-family: "Montserrat", Arial, sans-serif;
  font-weight: 700;
  color: white!important;
}
</style>

<div class="welcome_area">
  <div class="left_welcome">
    Here at AdPal,</br>
    You can find what you want,</br>
    When you want.
  </div>
  <div class="arrow_down">
    <a href="#ads" class="scroll"></a>
  </div>
</div>

<div class="index-con" id="ads">
<div class="glob-con">
<div class="search_con">
<h1 class="sub-header">Search Results</h1>
<hr>
<div class="featured_container">
<% @ads.each do |ad| %>

<% if ad.size == "featured" %>
  <div class="adspace_grid_f">
    <div class="pic_sec_f">
      <%= image_tag ad.preview.url(:featured) %>
    </div>
    <div class="text_info_f">
    <div class="text_title">
      <span class="bold"><%= link_to truncate(ad.title, length: 26), ad, :class => "title" %></span></br>
    </div>
    <div class="extra_info_f">
        <p><%= truncate(ad.info, length: 30) %></p>
        <span class="bold"><%= ad.location %></span></br>
        <span class="bold"><%= ad.url %></span>
      </div>
          <% if can? :destroy, ad %>
      <%= link_to 'Delete', ad, :method => :delete, :class => "delete" %> 
    <% end %>

    </div>

  </div> 
<% end %>

<% end %></div>


<% @ads.each do |ad| %>
<% if ad.size == "medium" %>
  <div class="adspace_grid">
    <div class="pic_sec">
      <%= image_tag ad.preview.url(:medium) %>
    </div>
    <div class="text_info">
      <div class="text_title">
      <span class="bold"><%= link_to truncate(ad.title, length: 13), ad, :class => "title" %></span></br>
    </div>
    <div class="extra_info">
      <p><%= truncate(ad.info, length: 15) %></p>
      <span class="bold"><%= ad.location %></span></br>
    </div>
              <% if can? :destroy, ad %>
      <%= link_to 'Delete', ad, :method => :delete, :class => "delete" %> 
    <% end %>
    </div>
  </div> 
<% end %>
<% end %>
</div>

<div class="ads_con">
  <h1 class="sub-header">Latest Ads</h1>
  <hr>
<div class="featured_container">
<% @ads_featured.each do |ad| %>
  <div class="adspace_grid_f">
    <div class="pic_sec_f">
      <%= image_tag ad.preview.url(:featured) %>
    </div>
    <div class="text_info_f">
      <div class="text_title">
        <span class="bold"><%= link_to truncate(ad.title, length: 26), ad, :class => "title" %></span></br>
      </div>
      <div class="extra_info_f">
        <p><%= truncate(ad.info, length: 30) %></p>
        <span class="bold"><%= ad.location %></span></br>
        <span class="bold"><%= ad.url %></span>
      </div>
          <% if can? :destroy, ad %>
      <%= link_to 'Delete', ad, :method => :delete, :class => "delete" %> 
    <% end %>
    </div>

  </div> 
<% end %>
</div>




<% @ads_medium.each do |ad| %>
  <div class="adspace_grid">
    <div class="pic_sec">
      <%= image_tag ad.preview.url(:medium) %>
    </div>
    <div class="text_info">
      <div class="text_title">
        <span class="bold"><%= link_to truncate(ad.title, length: 13), ad, :class => "title" %></span></br>
     </div>
     <div class="extra_info">
      <p><%= truncate(ad.info, length: 15) %></p>
      <span class="bold"><%= ad.location %></span></br>
    </div>
        <% if can? :destroy, ad %>
      <%= link_to 'Delete', ad, :method => :delete, :class => "delete" %> 
    <% end %>

    </div>

  </div> 
<% end %>

<% @ads_small.each do |ad| %>
  <div class="adspace_grid">
    <div class="pic_sec">
      <%= image_tag ad.preview.url(:medium) %>
    </div>
    <div class="text_info">
      <span class="bold"><%= ad.title %></span></br>
      <p><%= truncate(ad.info, length: 30) %></p>
      <div class="right-text">
        <span class="bold"><%= ad.location %></span></br>
        <span class="bold"><%= ad.url %></span>
      </div>
    </div>
    <% if can? :destroy, ad %>
      <%= link_to 'Delete', ad, :method => :delete %> 
    <% end %>
  </div> 
<% end %>

</div>

</div>

</div>

<script type="text/javascript">
jQuery(document).ready(function($) {
 
  $(".scroll").click(function(event){   
    event.preventDefault();
    $('html,body').animate({scrollTop:$(this.hash).offset().top}, 500);
  });
});
</script>


