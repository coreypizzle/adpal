<div class="red_bg">
<div class="login_form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></div>

  <div>
  <%= f.password_field :password, :placeholder => 'Password' %></div>

  <div class="small_btn"><%= f.submit "Sign In", :class => 'small_fix pointer' %></div>
  <div class="small_btn_right"><%= link_to "Sign Up", new_user_registration_path, :class => 'small_fix pointer', :method => :get %></div>
<% end %>
</div>

</div>
